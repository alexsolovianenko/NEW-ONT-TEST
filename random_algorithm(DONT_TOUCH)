#code a algorithm to see how many time we're engaging with some content

from random import randint



print('start engaging')

engagement = 0

while True:
    print(engagement)
    quit = input('quit? ')
    
    if quit == 'quit':
        break
    
    numb = randint(1,6)
    if numb == 1:
        yes = int(input('how much time do you scroll for (int): '))
        if yes>=5 and yes<=5:
            engagement = engagement + 0.5
        else:
            engagement = engagement - 1.0

    if numb == 2:
        yes = input('do you like the vid: ')
        if yes == "yes":
            engagement = engagement  + 0.5
        else:
            continue

    if numb == 3:
        yes = input('did you click profile? ')
        if yes == "yes":
            engagement = engagement + 0.5
        if yes == "no":
            engagement = engagement - 0.5

    if numb == 4:
        yes = input('did you look at the comments ')
        if yes == "yes":
            long = int(input('how long did you look at the comments for? (INT)'))
            if long>=0 and long<=5:
                engagement += 0.25
            if long>5 and long<10:
                engagement += 0.5

    if numb == 5:
        yes = input('did you rewatch the full video twice: ')
        if yes == "yes":
            engagement = engagement + 1.0

    if numb == 6:
        yes = input('did you finish the video')
        if yes == "no":
            engagement = engagement - 1.0

if engagement>2:
    print('recommend more')
elif engagement<-2:
    print('recommend once a day')
elif engagement >= -2 and engagement <= 2:
    print('show more vids to see if interested')
